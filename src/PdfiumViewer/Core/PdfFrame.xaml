<UserControl x:Class="PdfiumViewer.Core.PdfFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PdfiumViewer.Core"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Storyboard x:Key="blinkAnimation">
            <DoubleAnimation Storyboard.TargetName="blinkRectangle"
                                 Storyboard.TargetProperty="Opacity"
                                 From="0"
                                 To="1"
                                 RepeatBehavior="10x"
                                 AutoReverse="True"
                                 Duration="0:0:0.2"/>
        </Storyboard>
    </UserControl.Resources>
    <Grid>
        <Image x:Name="image"/>
        <Rectangle x:Name="blinkRectangle" Stroke="Red" StrokeThickness="3" IsHitTestVisible="False" Opacity="0" />
        <Canvas x:Name="canvas"/>
    </Grid>
</UserControl>
